<p id="notice"><%= notice %></p>

<h1>Directors and beneficial owners</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><b><%= link_to owner.nameOw, owner %></b></td>
        <td><%= owner.company.nameCo %></td>
        <td><%= link_to image_tag("show.png"), owner %></td>
        <td><%= link_to image_tag("edit.png"), edit_owner_path(owner) %></td>
        <td><%= link_to image_tag("delete.png"), owner, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

